<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_small"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="4dp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/charity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team connor childhood cancer foundation"
                android:textColor="@color/dark_g"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/unmark_rating" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="4dp" >

            <EditText
                android:id="@+id/enter_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#A8A8A8"
                android:hint="Enter Amount"
                android:inputType="numberDecimal"
                android:padding="4dp"
                android:textColorHint="@color/white_color" />

            <Button
                android:id="@+id/donate"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/enter_amount"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_green_box"
                android:text="Donate"
                android:textColor="@color/white_color" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>